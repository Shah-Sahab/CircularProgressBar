<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <src.limitindicator.com.limitindicatorlibrary.LimitIndicator
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:id="@+id/limitIndicator"
        custom:borderColor="#800080"
        custom:borderRadius="5dp"
        custom:outerCircleRadius="105dp"
        custom:text="Test Test"
        custom:textColor="#0e0e0e"
        custom:textSize="12sp"
        custom:numerator="75"
        custom:innerCircleColor="#008000"
        android:background="@color/hint_foreground_material_dark"/>

</RelativeLayout>
